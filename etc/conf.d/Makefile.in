prefix=@prefix@
exec_prefix=@exec_prefix@
LOGDIR=@localstatedir@
CFGDIR=@sysconfdir@
BINDIR=@bindir@
CGIDIR=@sbindir@
HTMLDIR=@datarootdir@
WEB_CFG_DIR=@web_conf_dir@
INSTALL=@INSTALL@
INSTALL_OPTS=@INSTALL_OPTS@

install:
	$(INSTALL) -m 644 $(INSTALL_OPTS) icinga.site.css $(DESTDIR)$(prefix)/pub/styles/icinga.site.css

	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(DESTDIR)/$(WEB_CFG_DIR)
	$(INSTALL) -m 644 $(INSTALL_OPTS) access.xml $(DESTDIR)$(WEB_CFG_DIR)/access.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) auth.xml $(DESTDIR)$(WEB_CFG_DIR)/auth.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) cronks.xml $(DESTDIR)$(WEB_CFG_DIR)/cronks.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) databases.xml $(DESTDIR)$(WEB_CFG_DIR)/databases.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) factories.xml $(DESTDIR)$(WEB_CFG_DIR)/factories.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) icinga.xml $(DESTDIR)$(WEB_CFG_DIR)/icinga.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) module_appkit.xml $(DESTDIR)$(WEB_CFG_DIR)/module_appkit.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) module_cronks.xml $(DESTDIR)$(WEB_CFG_DIR)/module_cronks.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) module_web.xml $(DESTDIR)$(WEB_CFG_DIR)/module_web.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) module_reporting.xml $(DESTDIR)$(WEB_CFG_DIR)/module_reporting.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) settings.xml $(DESTDIR)$(WEB_CFG_DIR)/settings.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) sla.xml $(DESTDIR)$(WEB_CFG_DIR)/sla.xml
	$(INSTALL) -m 644 $(INSTALL_OPTS) translation.xml $(DESTDIR)$(WEB_CFG_DIR)/translation.xml
