# default properties
appkit.etcdir=etc/

# Database configuration
# Only mysql in the moment (this should provide oracle or pgsql schema files)
db.type=@db_type@
db.user=@db_user@
db.pass=@db_pass@
db.host=@db_host@
db.name=@db_name@
db.port=@db_port@

# The database dsn
db.dsn=mysql:host=${db.host};dbname=${db.name};port=${db.port}

# Database binaries and calls

db.deployer.bin=${srcdir}/bin/doctrineDeployTool.php
db.deployer.call_global=${php.bin} ${db.deployer.bin}  --models=${db.deployer.models} --dbtype=${db.type}  --dbhost=${db.host} --dbport=${db.port} --dbuser=${db.user} --dbname=${db.name} --dbpass=${db.pass}
db.deployer.models = ${srcdir}/lib/appkit/database/models/

db.mysql.bin=@MYSQL@
db.mysql.call_global=${db.mysql.bin} --host=${db.host} --port=${db.port} --user=${db.user} --password=${db.pass}
db.mysql.call=${db.mysql.call_global} ${db.name}

# php executable
php.bin=@PHP@

