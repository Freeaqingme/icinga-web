<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0" xmlns="http://agavi.org/agavi/config/parts/logging/1.0">

	<ae:configuration>

		<loggers default="debug">

			<!-- logs warning and error messages -->
			<logger name="appkit" class="AgaviLogger" level="AgaviLogger::ALL ^ AgaviLogger::DEBUG ^ AgaviLogger::INFO">
				<appenders>
					<appender>AppKitLogAppender</appender>
				</appenders>
			</logger>
			
			<logger name="debug" class="AgaviLogger" level="AgaviLogger::ALL">
				<appenders>
					<appender>DebugLogAppender</appender>
				</appenders>
			</logger>

		</loggers>
		
		<appenders>
			<appender name="AppKitLogAppender" class="AppKitDoctrineLoggerAppender" layout="PassThru" />
			
			<!--
				Debug logs are rotated in a 7 day (AgaviRotatingFileLoggerAppender default) cycle
				Use 'cycle' parameter to alter the cycle.
			-->
			<appender name="DebugLogAppender" class="AgaviRotatingFileLoggerAppender" layout="DateTimeLayout">
				<ae:parameters>
					<ae:parameter name="dir">%core.app_dir%/data/log/</ae:parameter>
					<ae:parameter name="prefix">debug-</ae:parameter>
				</ae:parameters>
			</appender>
			
			<appender name="StdErrorAppender" class="AgaviStderrLoggerAppender" layout="DateTimeLayout" />
		</appenders>
		
		<layouts>
			<layout name="DateTimeLayout" class="AgaviTimestampLoggerLayout" />
			<layout name="PassThru" class="AgaviPassthruLoggerLayout" />
		</layouts>

	</ae:configuration>
</ae:configurations>