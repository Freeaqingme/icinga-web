<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://agavi.org/agavi/config/parts/module/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
	<ae:configuration>
		
		<module enabled="true">
			<settings>
				<setting name="title">Cronks Module</setting>
				<setting name="version">1.0</setting>

				<!--
					* Path to our grid templates
				-->
				<setting name="xml.path.grid">%core.module_dir%/Cronks/data/xml/grid</setting>

				<!--
					* Path to our tactical overview templates
				-->
				<setting name="xml.path.to">%core.module_dir%/Cronks/data/xml/to</setting>

				<!--
					* How log we preload the portal (showing the funny throbber, idling arround)
				-->
				<setting name="portal.loadmasktimeout">2300</setting>

				<setting name="grid.pagerMaxItems">30</setting>

				<setting name="grid.refreshTime">300</setting>

				<!--
					* Categories for the cronks
					The content depends on cronks.xml
				-->
				<setting name="categories">
					<ae:parameter name="core">
						<ae:parameter name="title">Core components</ae:parameter>
						<ae:parameter name="visible">false</ae:parameter>

					</ae:parameter>
					
					<ae:parameter name="data">
						<ae:parameter name="title">Data</ae:parameter>
						<ae:parameter name="visible">true</ae:parameter>
						<ae:parameter name="position">10</ae:parameter>
						<!-- Activate first! -->
						<ae:parameter name="active">true</ae:parameter>
					</ae:parameter>

					<ae:parameter name="to">
						<ae:parameter name="title">Tactical Overview</ae:parameter>
						<ae:parameter name="visible">true</ae:parameter>
						<ae:parameter name="position">20</ae:parameter>
					</ae:parameter>
					
					<ae:parameter name="misc">
						<ae:parameter name="title">Misc</ae:parameter>
						<ae:parameter name="visible">true</ae:parameter>
						<ae:parameter name="position">99</ae:parameter>
					</ae:parameter>
			
				</setting>

				<!--
					* Include a seperated cronks.xml
					Keep this configuration small
				-->
				<setting name="cronks">
					<xi:include xmlns:xi="http://www.w3.org/2001/XInclude"
					href="cronks.xml#xpointer(setting/node())" />
				</setting>
				
		
			</settings>
		</module>
		
	</ae:configuration>
</ae:configurations>