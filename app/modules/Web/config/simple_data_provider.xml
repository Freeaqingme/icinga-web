				<ae:parameter>SERVICE_PERFDATA</ae:parameter>
				<ae:parameter>SERVICE_CURRENT_CHECK_ATTEMPT</ae:parameter>
				<ae:parameter>SERVICE_MAX_CHECK_ATTEMPTS</ae:parameter>
				<ae:parameter>SERVICE_LAST_CHECK</ae:parameter>
				<ae:parameter>SERVICE_CHECK_TYPE</ae:parameter>
				<ae:parameter>SERVICE_LATENCY</ae:parameter>
				<ae:parameter>SERVICE_EXECUTION_TIME</ae:parameter>
				<ae:parameter>SERVICE_NEXT_CHECK</ae:parameter>
				<ae:parameter>SERVICE_LAST_HARD_STATE_CHANGE</ae:parameter>
				<ae:parameter>SERVICE_LAST_NOTIFICATION</ae:parameter>
				<ae:parameter>SERVICE_IS_FLAPPING</ae:parameter>
				<!-- 
				Is This Host Flapping? NO (0.00% state change)
				-->
				<ae:parameter>SERVICE_SCHEDULED_DOWNTIME_DEPTH</ae:parameter>
				<ae:parameter>SERVICE_STATUS_UPDATE_TIME</ae:parameter>
				
				<ae:parameter>SERVICE_NOTES_URL</ae:parameter>
				<!-- 
				Active Checks:	ENABLED  
				Passive Checks:	ENABLED  
				Obsessing:	ENABLED  
				Notifications: ENABLED  
				Event Handler:	ENABLED  
				Flap Detection:	ENABLED
				-->  
			</ae:parameter>
			<ae:parameter name="filter">
				<ae:parameter>
					<ae:parameter name="column">CONTACTGROUP_NAME</ae:parameter>
					<ae:parameter name="value">%</ae:parameter>
					<ae:parameter name="match_type">IcingaApi::MATCH_LIKE</ae:parameter>
				</ae:parameter>
			</ae:parameter>
			<ae:parameter name="user_filters">
				<ae:parameter name="host">
					<ae:parameter name="column">HOST_NAME</ae:parameter>
					<ae:parameter name="match_type">IcingaApi::MATCH_EXACT</ae:parameter>
				</ae:parameter>
				<ae:parameter name="service">
					<ae:parameter name="column">SERVICE_NAME</ae:parameter>
					<ae:parameter name="match_type">IcingaApi::MATCH_EXACT</ae:parameter>
				</ae:parameter>
			</ae:parameter>
			<ae:parameter name="order">
				<ae:parameter name="column">SERVICE_NEXT_CHECK</ae:parameter>
				<ae:parameter name="direction">desc</ae:parameter>
			</ae:parameter>
			<ae:parameter name="limit">
				<ae:parameter name="start">1</ae:parameter>
				<!-- <ae:parameter name="length">1</ae:parameter> -->
			</ae:parameter>
		</ae:parameter>
		
</setting>